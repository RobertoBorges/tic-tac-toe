<!DOCTYPE html>
<html>

<head>
    <title>TicTacToe - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/lib/tether/dist/css/tether.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/angular-material/angular-material.min.css" />
    <link rel="stylesheet" href="~/css/GlobalVet.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/css/TicTacToe.css" />
    
    <link href="~/lib/angular-bootstrap-datetimepicker/src/css/datetimepicker.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-svg/jquery.svg.min.js"></script>
    <script src="~/lib/tether/dist/js/tether.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- AngularJS -->
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-i18n/angular-locale_fr-ca.js"></script>
    <script src="~/lib/angular-animate/angular-animate.min.js"></script>
    <script src="~/lib/angular-aria/angular-aria.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/lib/angular-messages/angular-messages.min.js"></script>
    <script src="~/lib/angular-material/angular-material.min.js"></script>

    <!-- Angular-ui-bootstrap -->
    <script src="~/js/ui-bootstrap/ui-bootstrap-tpls-2.2.0.min.js"></script>

    <!-- MommentJS -->
    <script src="~/lib/momentjs/min/moment-with-locales.min.js"></script>
    <script src="~/lib/momentjs-angular-module/dist/angular-moment.min.js"></script>

    <!-- Date Time Picker-->
    <script src="~/lib/angular-bootstrap-datetimepicker/src/js/datetimepicker.js"></script>
    <script src="~/lib/angular-bootstrap-datetimepicker/src/js/datetimepicker.templates.js"></script>


    <!--signalR-->
    <script src="~/lib/signalr/jquery.signalR.min.js"></script>
    <script src="/signalr/hubs"></script>


</head>

<body>


    <div id="wrapper" class="hide-sidebar">
        <nav>
            <div class="container-fluid">
                <environment names="Development">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button id="sidebarToggle" class="btn btn-primary">
                                <i class="fa fa-angle-right"></i>
                            </button>
                        </li>
                    </ul>
                </environment>
            </div>
        </nav>
        <div class="row" id="branding">
            <div class="col-md-12">
                <div class="pull-right">
                    <h1></h1>
                </div>
            </div>
        </div>
        <div id="main" class="container-fluid">

            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-info"></h4>
            </div>
        </div>
    </div>

    <environment names="Development,Staging">
        <script type="text/javascript" src="~/js/site.js"></script>
    </environment>
    <environment names="Production">
        <script type="text/javascript" src="~/lib/_app/site.js"></script>
    </environment>

    @RenderSection("Scripts", false)

</body>

</html>